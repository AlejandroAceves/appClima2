<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/min_label"
        app:layout_constraintBottom_toBottomOf="@+id/forcast_min"
        app:layout_constraintStart_toEndOf="@+id/forcast_min"
        app:layout_constraintTop_toTopOf="@+id/forcast_min"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/forcast_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:text="@string/forcast_day"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/forcast_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forcast_min"
        app:layout_constraintBottom_toBottomOf="@+id/forcast_day"
        app:layout_constraintTop_toTopOf="@+id/forcast_day"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="76dp" />

    <TextView
        android:id="@+id/max_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:text="@string/max_label"
        app:layout_constraintBottom_toBottomOf="@+id/forcast_max"
        app:layout_constraintEnd_toStartOf="@+id/forcast_max"
        app:layout_constraintTop_toTopOf="@+id/forcast_max" />

    <TextView
        android:id="@+id/forcast_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="40dp"
        android:text="@string/forcast_max"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>